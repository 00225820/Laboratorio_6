#include "iostream"

using namespace std;
int funcionx (int array[], int t, int n) 
{
  
  int repetir = 0;
  int numeroarreglo = 0;
  for (int i = 0; i < t; i++)
  {
    
    if (n == array[i])
     {
       repetir++;
       numeroarreglo = array[i];
      }
  }

   cout <<"el numero" << numeroarreglo << "se repite en el arreglo" << " " << repetir << endl;
}

int funciony (int array[], int t, int n)
{
  for(int i = 0; i < t; i++)
   {
     if (n == array[i])
     {
       array[i] = 0;
      }
        
   }
}

int main()
{
  int array[100], x, numerodeveces=0;
  cout << endl;

  cout <<"El numero en el arreglo se repite: " << endl;
  cout << "ingresar el numero de tama"<<char(164)<<"o del arreglo" << endl;
  cin >> x;
  for (int i= 0; i<x; i++)
  {
    cout << endl;
    cout << i+1 << "digite un numero" << endl;
    cin >> array[i];
  }
  for(int i = 0; i<x; i++)
  {
    int n=array[i];
     if(n != 0)
    {
      funcionx (numero, x, n);
